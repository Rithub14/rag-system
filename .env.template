# OpenAI API key (required for embeddings & generation)
OPENAI_API_KEY=

# Local storage paths (SQLite + FAISS)
RAG_DB_PATH=data/rag.db
RAG_INDEX_PATH=data/faiss.index

# Redis (rate limiting)
REDIS_URL=redis://localhost:6379/0

# Upload limits
MAX_UPLOAD_MB=10

# Agentic toggles
ENABLE_TOOL_ROUTER=true
ENABLE_FOLLOWUPS=true
ENABLE_PLANNING=false
ENABLE_DOC_ACTIONS=true

# Optional credentials / settings
# e.g., Langfuse API keys and host (if using hosted service)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=

# App settings
# You can use this if you use pydantic settings later
APP_ENV=development
