# OpenAI API key (required for embeddings & generation)
OPENAI_API_KEY=

# Optional service host overrides
# e.g., localhost:8080 for weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_GRPC_PORT=50051
# WEAVIATE_GRPC_HOST=localhost
# WEAVIATE_GRPC_SECURE=false

# Redis (rate limiting)
REDIS_URL=redis://localhost:6379/0

# Upload limits
MAX_UPLOAD_MB=10

# Optional credentials / settings
# e.g., Langfuse API keys and host (if using hosted service)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=

# App settings
# You can use this if you use pydantic settings later
APP_ENV=development
